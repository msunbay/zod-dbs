{
  "name": "zod-dbs",
  "version": "2.0.0",
  "description": "Opinionated Zod schema generator for databases",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "rm -rf ./dist && tsc --project tsconfig.build.json",
    "test": "pnpm run test:unit",
    "test:unit": "vitest --project unit run",
    "test:integration": "vitest --project integration run",
    "test:types": "tsc --noEmit"
  },
  "author": "msolvaag",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/msolvaag/zod-dbs.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "templates"
  ],
  "dependencies": {
    "mustache": "^4.2.0",
    "pluralize": "^8.0.0",
    "zod-dbs-core": "workspace:*"
  }
}
