{
  "name": "zod-dbs-cli",
  "version": "2.0.0",
  "description": "Opinionated Zod schema generator for databases",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "bin": {
    "zod-dbs": "index.js"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "rm -rf ./dist && tsc --project tsconfig.build.json",
    "test:unit": "vitest --project unit run",
    "test:integration": "pnpm run test:integration:cli && pnpm run test:integration:pg && pnpm run test:integration:mysql && pnpm run test:integration:mongodb && pnpm run test:integration:schema",
    "test:integration:cli": "vitest --project integration:cli run",
    "test:integration:pg": "vitest --project integration:pg run",
    "test:integration:mysql": "vitest --project integration:mysql run",
    "test:integration:mongodb": "vitest --project integration:mongodb run",
    "test:integration:dynamodb": "vitest --project integration:dynamodb run",
    "test:integration:schema": "vitest --project integration:schema run",
    "test:types": "tsc --noEmit"
  },
  "author": "Magnus Solv√•g",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/msolvaag/zod-dbs.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@aws-sdk/client-dynamodb": "^3.879.0",
    "@testcontainers/mysql": "^11.5.1",
    "@testcontainers/postgresql": "^11.5.1",
    "zod-dbs-dynamodb": "workspace:*",
    "zod-dbs-mongodb": "workspace:*",
    "zod-dbs-mysql": "workspace:*",
    "zod-dbs-pg": "workspace:*",
    "zod-dbs-snowflake": "workspace:*"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "commander": "^14.0.0",
    "cosmiconfig": "^9.0.0",
    "mustache": "^4.2.0",
    "ora": "^8.2.0",
    "zod-dbs": "workspace:*",
    "zod-dbs-core": "workspace:*"
  }
}
