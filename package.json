{
  "name": "zod-dbs-workspace",
  "private": true,
  "version": "1.0.0",
  "description": "Opinionated Zod schema generator for databases",
  "main": "index.js",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "pnpm run -r build",
    "start": "pnpm run build && node index.js",
    "dev": "tsx dev.ts",
    "test": "pnpm run build && pnpm run test:unit && pnpm run test:integration && pnpm run test:types",
    "test:unit": "pnpm run --parallel -r test:unit",
    "test:integration": "pnpm run -r test:integration",
    "test:types": "pnpm run -r test:types",
    "format": "prettier --write ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/msolvaag/zod-dbs.git"
  },
  "author": "msolvaag",
  "license": "ISC",
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.6.2",
    "@testcontainers/mongodb": "^10.28.0",
    "@types/debug": "^4.1.12",
    "@types/mustache": "^4.2.6",
    "@types/node": "^20",
    "@types/pluralize": "^0.0.33",
    "@vitest/coverage-v8": "^3.2.4",
    "prettier": "^3.6.2",
    "testcontainers": "^11.5.1",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "zod": "^4.0.17"
  },
  "packageManager": "pnpm@10.15.1+sha512.34e538c329b5553014ca8e8f4535997f96180a1d0f614339357449935350d924e22f8614682191264ec33d1462ac21561aff97f6bb18065351c162c7e8f6de67"
}
